<script>
let questions = [];
let current = -1;
let timeLeft = 10;
let timer;
let teams = [];
let currentTeam = 0;

function playSound(id) {
  const s = document.getElementById(id);
  s.currentTime = 0;
  s.play();
}

function showSetup() {
  document.getElementById('welcome').style.display = 'none';
  document.getElementById('setup').style.display = 'flex';
}

function selectTeams(n) {
  const box = document.getElementById('teamNames');
  box.innerHTML = "";
  for (let i = 1; i <= n; i++) {
    box.innerHTML += `<div><input id="team${i}" placeholder="ุงุณู ุงููุฑูู ${i}" /></div>`;
  }
  box.innerHTML += `<button onclick="startGame(${n})">ุงุจุฏุฃ ุงููุนุจุฉ ๐ฎ</button>`;
}

function startGame(n) {
  teams = [];
  for (let i = 1; i <= n; i++) {
    let name = document.getElementById('team' + i).value || ("ุงููุฑูู " + i);
    teams.push({ name: name, score: 0 });
  }
  document.getElementById('setup').style.display = 'none';
  document.getElementById('game').style.display = 'block';
  renderTeams();
  const data = document.getElementById('questionData').textContent;
  questions = JSON.parse(data);
  questions = questions.sort(() => Math.random() - 0.5);
  nextQuestion();
}

function renderTeams() {
  const sb = document.getElementById('scoreboard');
  sb.innerHTML = "";
  const colors = ["blue", "red", "green", "yellow"];
  teams.forEach((t, i) => {
    sb.innerHTML += `<div class="team ${colors[i]}">${t.name}: <span id="score${i}">0</span></div>`;
  });
}

function updateScores() {
  teams.forEach((t, i) => {
    document.getElementById("score" + i).innerText = t.score;
  });
}

function showAnswer() {
  playSound("soundAnswer");
  document.getElementById("answer").style.display = "block";
}

function correctAnswer() {
  playSound("soundCorrect");
  teams[currentTeam].score++;
  updateScores();
  // ุนุฑุถ ูุคุซุฑ ุจุณูุท ูุจู ุงูุงูุชูุงู ููุณุคุงู ุงูุชุงูู
  document.getElementById("question").innerHTML += "<br>โ ุฅุฌุงุจุฉ ุตุญูุญุฉ!";
  setTimeout(() => {
    nextTurn();
    nextQuestion();
  }, 1200); // ุจุนุฏ 1.2 ุซุงููุฉ ููุชูู ููุณุคุงู ุงูุชุงูู
}

function wrongAnswer() {
  playSound("soundWrong");
  document.getElementById("question").innerHTML += "<br>โ ุฅุฌุงุจุฉ ุฎุงุทุฆุฉ!";
  setTimeout(() => {
    nextTurn();
    nextQuestion();
  }, 1200); // ุจุนุฏ 1.2 ุซุงููุฉ ููุชูู ููุณุคุงู ุงูุชุงูู
}


function nextTurn() {
  currentTeam = (currentTeam + 1) % teams.length;
}

function nextQuestion() {
  clearInterval(timer);
  current++;
  if (current >= 50 || current >= questions.length) {
    showResult();
    return;
  }
  let q = questions[current];
  const qElem = document.getElementById("question");
  qElem.classList.remove("fade-question");
  void qElem.offsetWidth;
  qElem.classList.add("fade-question");
  qElem.innerText = `[${q.category}] ${q.q}`;
  document.getElementById("answer").innerText = "ุงูุฅุฌุงุจุฉ: " + q.a;
  document.getElementById("answer").style.display = "none";
  document.getElementById("turn").innerHTML = `๐ฏ ุฏูุฑ <strong>${teams[currentTeam].name}</strong>`;
  timeLeft = 10;
  document.getElementById("time").innerText = timeLeft;
  document.getElementById("time").classList.remove("timeout");
  playSound("soundStart");
  startTimer();
}

function startTimer() {
  timer = setInterval(() => {
    timeLeft--;
    document.getElementById("time").innerText = timeLeft;
    if (timeLeft <= 0) {
      clearInterval(timer);
      document.getElementById("time").classList.add("timeout");
      document.getElementById("question").innerHTML = "โฐ ุงูุชูู ุงูููุช!<br>" + questions[current].q;
      document.getElementById("answer").style.display = "block";
      nextTurn();
    }
  }, 1000);
}

function showResult() {
  clearInterval(timer);
  let sorted = [...teams].sort((a, b) => b.score - a.score);
  let winner = sorted[0];

  document.getElementById("result").style.display = "block";
  document.getElementById("result").innerHTML =
    `<div style='font-size:2.5em;color:#ffd700;text-shadow:0 0 30px #ffb703;animation:fadeIn 1.5s ease;'>๐ฅ ุงููุงุฆุฒ ูู <strong>${winner.name}</strong> ุจู ${winner.score} ููุทุฉ!</div><br>
    <div style='margin-top:15px;font-size:1.5em;'>
      ${sorted.map(t => `${t.name}: ${t.score} ููุทุฉ`).join("<br>")}
    </div>
    <br><br>
    <button onclick="location.reload()">๐ ุฅุนุงุฏุฉ ุงููุนุจ</button>`;

  // ๐ต ุชุดุบูู ุตูุช ุงูููุฒ ุงูุทููู
  playSound("soundWin");

  // โจ ูููุถ ุฐูุจู ุฎููู ุนูุฏ ุงูููุฒ
  document.body.style.background = "radial-gradient(circle, #ffd700, #7209b7, #240046)";
  setTimeout(() => {
    document.body.style.background = "radial-gradient(circle at center, #240046, #3a0ca3, #7209b7)";
  }, 5000);
}

</script>
</body>
</html>

